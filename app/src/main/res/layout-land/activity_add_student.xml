<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addStudent"
    android:background="#C7DEE8">

    <TextView
        android:id="@+id/sDetail"
        android:layout_width="489dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Student's Details Form"
        android:textColor="#6200ED"
        android:textSize="34dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sDetail"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-6dp"
        android:hint="Enter Student Name"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sDetail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_toEndOf="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:hint="Enter Student Age"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/Class"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"
        android:hint="Enter Student Class"
        android:paddingLeft="20dp" />


    <TextView
        android:id="@+id/sabaq"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/surah"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:background="#6200ED"
        android:paddingLeft="22dp"
        android:paddingTop="5dp"
        android:text="Sabaq"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/fAyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/surah"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-1dp"
        android:hint="first"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/lAyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surah"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="454dp"
        android:layout_marginRight="454dp"
        android:hint="last"
        android:paddingLeft="5dp" />

    <EditText
        android:id="@+id/surah"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="74dp"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_toEndOf="@+id/Class"
        android:layout_toRightOf="@+id/Class"
        android:hint="Enter surah number"
        android:paddingLeft="20dp" />


    <TextView
        android:id="@+id/sabqi"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/sabaq"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_toStartOf="@+id/sPara"
        android:layout_toLeftOf="@+id/sPara"
        android:background="#6200ED"
        android:paddingLeft="22dp"
        android:paddingTop="5dp"
        android:text="Sabqi"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/sPara"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sabaq"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-38dp"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:hint="Enter para number"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/manzil"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/sabqi"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="12dp"
        android:background="#6200ED"
        android:paddingLeft="22dp"
        android:paddingTop="5dp"
        android:text="Manzil"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mPara"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sabqi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="382dp"
        android:layout_marginRight="382dp"
        android:hint="Enter para number"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_below="@id/manzil"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="477dp"
        android:layout_marginLeft="477dp"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:gravity="center"
        android:text="Save"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>